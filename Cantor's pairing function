function cantor(n) {
  let row = 1;
  let col = 1;
  let direction = 1;

  for (let i = 1; i < n; i++) {
    if (direction === 1) {
      if (row === 1) {
        col++;
        direction = -1;
      } else {
        row--;
        col++;
      }
    } else {
      if (col === 1) {
        row++;
        direction = 1;
      } else {
        row++;
        col--;
      }
    }
  }

  return `${row}/${col}`;
}
